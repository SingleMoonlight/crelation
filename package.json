{
  "name": "crelation",
  "displayName": "CRelation",
  "description": "A plugin that visualizes the relationship between C function calls",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "crelation.init",
        "title": "CRelation: Init database"
      },
      {
        "command": "crelation.update",
        "title": "CRelation: Update database"
      },
      {
        "command": "crelation.forceUpdate",
        "title": "CRelation: Force update database"
      }
    ],
    "configuration": {
      "title": "插件数据保存路径",
      "properties": {
        "crelation.dataSavePath": {
          "type": "string",
          "description": "扫描项目生成的数据将会保存在该路径下。"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "nanoid": "^5.0.9",
    "tree-sitter": "^0.22.1",
    "tree-sitter-c": "^0.23.4"
  }
}
